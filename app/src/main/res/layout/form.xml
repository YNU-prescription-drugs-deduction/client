<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/ynu"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/formTitle_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신청하기"
            android:textSize="28dp"
            android:textColor="@color/white"
            android:textStyle="bold"></TextView>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

        <ImageButton
            android:id="@+id/formHome_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/home"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            ></ImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:padding="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="• 신청서류"
            android:textSize="30dp"
            android:textColor="@color/ynu"
            android:textStyle="bold"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="30dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/prescription_imgbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:background="@android:color/transparent"
                    android:src="@drawable/addimg"
                    android:scaleType="fitCenter"></ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:text="처방전"
                    android:textSize="24dp"
                    android:textColor="@color/ynu"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/receipt_imgbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:background="@android:color/transparent"
                    android:src="@drawable/addimg"
                    android:scaleType="fitCenter"></ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:text="약제비 영수증"
                    android:textSize="24dp"
                    android:textColor="@color/ynu"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="• 환불계좌"
            android:textSize="30dp"
            android:textColor="@color/ynu"
            android:textStyle="bold"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="은행 :"
                    android:textSize="24dp"
                    android:textColor="@color/ynu"
                    android:textStyle="bold"></TextView>
                <Spinner
                    android:id="@+id/accountBank_spn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:spinnerMode="dialog"></Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="예금주 :"
                    android:textSize="24dp"
                    android:textColor="@color/ynu"
                    android:textStyle="bold"></TextView>
                <EditText
                    android:id="@+id/accountName_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="계좌번호 :"
                    android:textSize="24dp"
                    android:textColor="@color/ynu"
                    android:textStyle="bold"></TextView>
                <EditText
                    android:id="@+id/accountNumber_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"></EditText>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <android.widget.Button
        android:visibility="visible"
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/signupbtn"
        android:text="신청하기"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"></android.widget.Button>

    <LinearLayout
        android:id="@+id/formBtns"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <android.widget.Button
            android:id="@+id/update_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/signupbtn"
            android:text="저장"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"></android.widget.Button>

        <android.widget.Button
            android:id="@+id/delete_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/signupbtn"
            android:text="삭제"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"></android.widget.Button>

    </LinearLayout>

</LinearLayout>